<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <log4net>
    <!--For log message-->
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender" >
      <param name="File"  type="log4net.Util.PatternString" value="%property{LogFolder}"  />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Composite" />
      <param name="MaxSizeRollBackups" value="10" />
      <param name="MaximumFileSize" value="1024KB" />
      <param name="DatePattern" value="yyyyMMdd" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%utcdate{yyyy/MM/dd HH:mm:ss}[%level][%c]: %message%newline%exception" />
      </layout>
    </appender>
    <root>
      <level value="ALL" />
    </root>
    <appender name="LocalRollingFileAppender" type="log4net.Appender.RollingFileAppender" >
      <param name="File"  type="log4net.Util.PatternString" value="%property{LogFolder}"  />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Composite" />
      <param name="MaxSizeRollBackups" value="10" />
      <param name="MaximumFileSize" value="1024KB" />
      <param name="DatePattern" value="yyyyMMdd" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%date{yyyy/MM/dd HH:mm:ss}[%level][%c]: %message%newline%exception" />
      </layout>
    </appender>
    <root>
      <level value="ALL" />
    </root>
    <logger name="PowerShell" additivity="false">
      <level value="ALL" />
      <appender-ref ref="LocalRollingFileAppender" />
    </logger>
    <logger name="Debug" additivity="false">
      <level value="ALL" />
      <appender-ref ref="LocalRollingFileAppender" />
    </logger>
    <logger name="Info" additivity="false">
      <level value="ALL" />
      <appender-ref ref="LocalRollingFileAppender" />
    </logger>
    <logger name="Warn" additivity="false">
      <level value="ALL" />
      <appender-ref ref="LocalRollingFileAppender" />
    </logger>
    <logger name="Error" additivity="false">
      <level value="ALL" />
      <appender-ref ref="LocalRollingFileAppender" />
    </logger>
    <logger name="Fatal" additivity="false">
      <level value="ALL" />
      <appender-ref ref="LocalRollingFileAppender" />
    </logger>
  </log4net>
</configuration>